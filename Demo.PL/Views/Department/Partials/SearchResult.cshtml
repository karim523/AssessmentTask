@model DepartmentSearchResult

@if (Model is not null)
{
    <h3>Search Result</h3>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Department Name</th>
                <th>Employee Count</th>
                <th>Total Salary</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.DepartmentName</td>
                <td>@Model.EmployeeCount</td>
                <td>@Model.TotalSalary</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-3">No departments found.</div>
}