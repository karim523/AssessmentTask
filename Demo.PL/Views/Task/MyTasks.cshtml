@model IEnumerable<Demo.BLL.Dtos.Tasks.TaskDto>

@{
    ViewData["Title"] = "My Tasks";
}

<h2 class="mb-4">My Tasks</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no tasks assigned.</div>
}
else
{
    <table class="table table-striped table-hover text-center">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.DueDate?.ToShortDateString()</td>
                    <td>@task.Status</td>
                    <td>
                        <a asp-action="EditStatus" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                            Edit Status
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
