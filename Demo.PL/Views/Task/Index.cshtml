@model IEnumerable<EmployeeTask>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Employee</th>
            <th>Status</th>
            <th>Due Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Employee?.FullName</td>
                <td>@task.Status</td>
                <td>@task.DueDate?.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
